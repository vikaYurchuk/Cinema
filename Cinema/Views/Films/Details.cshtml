@model Film

<h1>Film Details</h1>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">Film</dt>
        <dd class="col-sm-10">
            <img src="@Model.Cover" height="150" />
        </dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Duration</dd>

      
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a> |
    <a href="@(ViewBag.ReturnUrl ?? '/')" class="btn btn-dark">Back</a>
    <a asp-controller="Favourites" 
    asp-action="Add" 
    asp-route-id="@Model.Id" class="btn btn-success" 
    asp-route-returnUrl="@Context.Request.Path" >Add to favourite</a>
</div>
