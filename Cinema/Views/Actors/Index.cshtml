
@model List<Actor>

<h1>Films Admin Page</h1>

<p>
    <button type="button" class="btn btn-primary">Create New Actor</button>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Film</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr class="align-middle">
                <th scope="row" style="width: 1%">@i.Id</th>
                @*<td class="text-center" style="width: 1%">
                    <img height="40" src="@i.Film?.Cover" alt="@i.Film?.Name" />
                </td>*@
                <td>@i.FirstName</td>
                <td>@i.LastName</td>
                
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-info-square-fill"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>